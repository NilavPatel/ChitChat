@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <h3>User: <label id="lbluser"></label></h3>
            <br>
            <input type="hidden" id="userInput" />            
            Message : <input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
        <div class="col-6">
            <label id="isTyping" />
        </div>
    </div>
</div>
<style>
    .green-message{
        color: green;
    }
    .blue-message{
        color: blue;
        text-align: end;
    }
</style>
<script>    
    var person = prompt("Please enter your name", "");
    if (person != null) {
        document.getElementById("userInput").value = person;
        document.getElementById("lbluser").innerText = person;
    }
</script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>