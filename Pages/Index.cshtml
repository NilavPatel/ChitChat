@page
<div class="container">  
    <div class="row border">
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12">
                    <div class="row border-bottom">
                        <div class="col-md-12">
                            <ul id="messagesList"></ul>
                        </div>
                    </div>                    
                    <div class="row">
                        <div class="col-md-12">
                            User: <label id="lbluser"></label>
                        </div>
                        <div class="col-md-12">
                            <input type="hidden" id="userInput" />            
                            Message : <input type="text" id="messageInput" />
                            <input type="button" id="sendButton" value="Send Message" />
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-md-12">
                            <label id="isTyping" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 border-left">
            <h3>Active Users</h3>
            <div id="activeUserList"></div>
        </div>
    </div>
</div>
<style>
    .green-message{
        color: green;
    }
    .blue-message{
        color: blue;
        text-align: end;
    }
    .border-left{
        border-left: 1px solid gray;
    }
    .border-bottom{
        border-bottom: 1px solid gray;
    }
    #messagesList{
        height:500px;
        overflow: scroll;
    }
    #activeUserList{
         height:565px;
        overflow: scroll;
    }
    .border{
        border: 1px solid gray;
    }
</style>
<script>    
    var person = prompt("Please enter your name", "");
    if (person != null) {
        document.getElementById("userInput").value = person;
        document.getElementById("lbluser").innerText = person;
    }
</script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>